<%= @player.name %>
  <%= form_for(@player) do |f| %>
    <% if @player.errors.any? %>
    <h2><%= pluralize(@player.errors.count, "error")%>
            prohibited this record from being saved:</h2>
    <ul>
      <% @player.errors.full_message.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit "Confirm Edit" %>
<% end %>
